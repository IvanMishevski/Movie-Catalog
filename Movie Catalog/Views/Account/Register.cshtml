@model Movie_Catalog.Models.RegisterViewModel

@{
    // Set the page title
    ViewData["Title"] = "Register";
}

<!-- Main registration styling -->
<style>
    /* Base body styling */
    body {
        background-color: #a3d5f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    /* Registration container layout */
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Registration card styling */
    .register-card {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        width: 400px;
        text-align: center;
    }

    /* Title styling */
    .register-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #0078d4;
    }

    /* Subtext styling */
    .register-subtext {
        font-size: 14px;
        color: #666;
        margin-bottom: 20px;
    }

    /* Form group layout */
    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    /* Input group styling */
    .input-group {
        display: flex;
        align-items: center;
        background: #f0f8ff;
        border-radius: 8px;
        padding: 10px;
    }

        /* Icon styling in input groups */
        .input-group .icon {
            margin-right: 10px;
            font-size: 18px;
            color: #0078d4;
        }

    /* Form control styling */
    .form-control {
        width: 100%;
        border: none;
        background: transparent;
        font-size: 16px;
        outline: none;
    }

    /* Register button styling */
    .btn-register {
        width: 100%;
        background-color: #0078d4;
        border: none;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease-in-out;
    }

        /* Register button hover effect */
        .btn-register:hover {
            background-color: #005fa3;
        }

    /* Login link section */
    .login-link {
        margin-top: 15px;
        font-size: 14px;
    }

        /* Login link styling */
        .login-link a {
            color: #0078d4;
            text-decoration: none;
        }

            /* Login link hover effect */
            .login-link a:hover {
                text-decoration: underline;
            }
</style>

<body>
    <!-- Main registration container -->
    <div class="register-container">
        <!-- Registration card with form -->
        <div class="register-card">
            <h2 class="register-title">Create Your Account</h2>
            <p class="register-subtext">Join us and explore a world of movies!</p>

            <!-- Registration form with validation -->
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Username input group -->
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <div class="input-group">
                        <span class="icon">ðŸ‘¤</span>
                        <input asp-for="Username" class="form-control" placeholder="Username" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Email input group -->
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div class="input-group">
                        <span class="icon">ðŸ“§</span>
                        <input asp-for="Email" class="form-control" placeholder="E-mail" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password input group -->
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-group">
                        <span class="icon">ðŸ”’</span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password input group -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <div class="input-group">
                        <span class="icon">ðŸ”’</span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-register">Create Account</button>

                <!-- Login link for existing users -->
                <p class="login-link">Already have an account? <a href="/Account/Login">Login here</a></p>
            </form>
        </div>
    </div>
</body>
