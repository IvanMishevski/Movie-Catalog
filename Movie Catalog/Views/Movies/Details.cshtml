@model Movie_Catalog.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
        color: #333;
    }

    .movie-details-container {
        display: flex;
        flex-direction: row;
        gap: 30px;
        justify-content: center;
        margin: 30px;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .movie-cover {
        max-width: 300px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .movie-info {
        flex: 1;
        max-width: 600px;
    }

    .movie-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .movie-info p {
        margin: 8px 0;
        font-size: 1.1rem;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        margin-top: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .review-section {
        margin-top: 10px;
        padding: 10px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

        .review-section h3 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }

    .review-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 100%;
    }

        .review-container textarea,
        .review-container select {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .review-container textarea {
            height: 150px;
            resize: vertical;
        }

        .review-container select {
            background-color: #f9f9f9;
            color: #333;
        }

            .review-container select:focus,
            .review-container textarea:focus {
                border-color: #007bff;
                outline: none;
            }
    .btn-container {
        display: flex;
        justify-content: flex-end;
    }

    .review-section button {
        padding: 12px 24px;
        font-size: 1rem;
        border-radius: 5px;
        background-color: #28a745;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .review-section button:hover {
            background-color: #218838;
            transform: translateY(-3px);
        }
</style>

<body>
    <div class="movie-details-container">
        <div>
            <img src="@Model.PosterUrl" alt="Cover of @Model.Title" class="movie-cover">
        </div>

        <div class="movie-info">
            <h1 class="movie-title">@Model.Title</h1>
            <p><strong>Genre:</strong> @Model.Genre.Name</p>
            <p><strong>Director:</strong> @Model.Director.Name</p>
            <p>
                <strong>Movie Actors:</strong>
                @string.Join(", ", Model.MovieActors.Select(ma => ma.Actor.Name))
            </p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Release Year:</strong> @Model.ReleaseYear</p>

            <form asp-controller="Watchlist" asp-action="AddToWatchlist" method="post">
                <input type="hidden" name="movieId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Add to Watchlist</button>
            </form>

            <a asp-action="Index" class="btn btn-secondary">Back to Movies</a>
        </div>
    </div>

    <!-- Add Review and Rating Section -->
    <div class="review-section">
        <h3>Leave a Review</h3>
        <form method="post" asp-action="SubmitReview" asp-controller="Movies">
            <div class="review-container">
                <textarea name="ReviewText" placeholder="Write your review here..."></textarea>

                <label for="Rating">Rating:</label>
                <select name="Rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-success">Submit Review</button>
            </div>
        </form>
    </div>

</body>
